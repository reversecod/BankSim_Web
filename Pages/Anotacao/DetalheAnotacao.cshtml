@page "{id:int}"
@model DetalheAnotacaoModel
@{
    ViewData["Title"] = "Detalhe da Anotação";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Editar Anotação - BankSim</title>
    <style>
        body {
            margin: 0;
            padding-top: 60px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f6fa;
        }

        .top-bar {
            width: 100%;
            height: 60px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            padding: 0 40px;
        }

        .logo-img {
            height: 2rem;
        }

        .form-container {
            max-width: 900px;
            margin: 80px auto;
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
        }

        input[type="text"] {
            font-size: 1.5rem;
            font-weight: bold;
            width: 100%;
            padding: 10px 12px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 6px;
            box-sizing: border-box;
        }

        textarea {
            width: 100%;
            min-height: 400px;
            resize: vertical;
            padding: 12px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        .btn-submit {
            margin-top: 30px;
            width: 100%;
            background-color: #1065ee;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
        }

            .btn-submit:hover {
                background-color: #005ae0;
            }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="top-bar">
        <a asp-page="/Home">
            <img src="~/img/logoBKS.png" alt="BankSim Logo" class="logo-img" />
        </a>
    </div>

    <div class="form-container" style="background-color:@Model.Anotacao.CorNota">
        <form method="post">
            <input type="hidden" asp-for="Anotacao.ID" />

            <input asp-for="Anotacao.Titulo" placeholder="Título da Anotação" type="text" />
            <span asp-validation-for="Anotacao.Titulo" class="text-danger"></span>

            <textarea asp-for="Anotacao.TextoAnotacao" placeholder="Conteúdo da Anotação..."></textarea>
            <span asp-validation-for="Anotacao.TextoAnotacao" class="text-danger"></span>

            <select asp-for="Anotacao.CorNota">
                <option value="#ffffff">Branco</option>
                <option value="#01EB90">Verde claro</option>
                <option value="#04EB00">Verde folha</option>
                <option value="#67EBB1">Verde pastel</option>
                <option value="#01A2EA">Azul claro</option>
                <option value="#67CDEB">Azul pastel</option>
                <option value="#00EAEB">Azul ciano</option>
                <option value="#EAE74D">Amarelo claro</option>
                <option value="#E7EB05">Amarelo mostarda</option>
                <option value="#EAEA83">Amarelo pastel</option>
                <option value="#EB4737">Vermelho claro</option>
                <option value="#EB1C3A">Vermelho carmesim</option>
                <option value="#EA3D54">Vermelho pastel</option>
            </select>

            <button type="submit" class="btn-submit">Salvar Alterações</button>
        </form>

        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Tem certeza que deseja excluir esta anotação?');">
            <input type="hidden" asp-for="Anotacao.ID" />
            <button type="submit" style="
        margin-top: 10px;
        width: 100%;
        background-color: #ff4d4d;
        color: white;
        border: none;
        padding: 12px;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;">
                Excluir Anotação
            </button>
        </form>
    </div>
</body>
</html>