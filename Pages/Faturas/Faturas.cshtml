@page
@model FaturasModel
@{
    ViewData["Title"] = "Faturas";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Fatura - BankSim</title>
    <style>
        body {
            margin: 0;
            padding-top: 60px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f6fa;
        }

        .top-bar {
            width: 100%;
            height: 60px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .top-bar-content {
            width: 100%;
            max-width: 1200px;
            padding: 0 40px;
            display: flex;
            align-items: center;
        }

        .logo-img {
            height: 2rem;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto;
            margin-top: 40px;
            background-color: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        label {
            display: block;
            margin-top: 20px;
            font-weight: 500;
        }

        input, select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        .btn-submit {
            margin-top: 30px;
            width: 100%;
            background-color: #1065ee;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
        }

            .btn-submit:hover {
                background-color: #005ae0;
            }

        .text-danger {
            color: red;
            margin-top: 10px;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="top-bar">
        <div class="top-bar-content">
            <a asp-page="/Home">
                <img src="~/img/logoBKS.png" class="logo-img" alt="BankSim Logo" />
            </a>
        </div>
    </div>

        <div class="form-container">
        <h2>Fatura do mês atual</h2>

        @if (Model.FaturaSelecionada != null)
        {
            <form method="post">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <p>
                    <strong>Fatura de:</strong> @((Banksim_Web.Enums.Meses)Model.FaturaSelecionada.MesPagamento)/@Model.FaturaSelecionada.AnoPagamento<br />
                    <strong>Valor total:</strong> R$ @Model.FaturaSelecionada.ValorFatura.ToString("F2")
                </p>

                <label for="ValorPagamento">Quanto deseja pagar?</label>
                <input asp-for="ValorPagamento" step="0.01" type="number" placeholder="Digite ou clique em pagar tudo" />

                <button type="button" onclick="pagarTudo()" class="btn-submit" style="margin-top: 15px; background-color: #28a745;">
                    Pagar tudo
                </button>

                <button type="submit" class="btn-submit">Confirmar Pagamento</button>
            </form>

            <form method="get" asp-page="/Faturas/Selecionar">
                <button type="submit" class="btn-submit" style="margin-top: 15px; background-color: #888;">
                    Escolher outra fatura
                </button>
            </form>
        }
        else
        {
            <p>Você não possui faturas em aberto.</p>
        }
    </div>

    <script>
        function pagarTudo() {
            const valor = '@Model.FaturaSelecionada?.ValorFatura.ToString("F2")';
            document.querySelector('[name="ValorPagamento"]').value = valor.replace(',', '.');
        }
    </script>
</body>
</html>