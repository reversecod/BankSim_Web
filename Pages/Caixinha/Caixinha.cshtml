@page
@model CaixinhaModel
@{
    ViewData["Title"] = "Minhas Caixinhas";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Minhas Caixinhas - BankSim</title>
    <style>
        body {
            margin: 0;
            padding-top: 60px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f6fa;
        }

        .top-bar {
            width: 100%;
            height: 60px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .top-bar-content {
            width: 100%;
            max-width: 1200px;
            padding: 0 40px;
            display: flex;
            align-items: center;
        }

        .logo-img {
            height: 2rem;
        }

        .investimento-total {
            max-width: 1200px;
            margin: 100px auto 10px auto;
            padding: 0 20px;
            font-size: 1.2rem;
            font-weight: bold;
            color: #28a745;
        }

        .container {
            max-width: 1200px;
            margin: 10px auto 0 auto;
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .caixinha-card, .caixinha {
            width: 180px;
            height: 180px;
            border-radius: 12px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            background-color: white;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            text-decoration: none;
            border: 1px solid #e0e0e0;
            transition: transform 0.2s ease;
            cursor: pointer;
            position: relative;
        }

            .caixinha:hover, .caixinha-card:hover {
                transform: scale(1.03);
                box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            }

            .caixinha img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                position: absolute;
                border-radius: 12px;
                z-index: 0;
            }

        .caixinha-info {
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.9);
            z-index: 1;
        }

            .caixinha-info h4 {
                margin: 0;
                font-size: 1rem;
                color: #333;
            }

            .caixinha-info .valor {
                font-weight: bold;
                font-size: 0.95rem;
                color: #1065ee;
            }

            .caixinha-info .rend {
                font-size: 0.85rem;
                color: #666;
            }

            .caixinha-info .porcentagem {
                color: #28a745;
                font-weight: bold;
            }

        .caixinha-card {
            background-color: #f3f5ff;
            border: 2px dashed #1065ee;
            justify-content: center;
            align-items: center;
            color: #1065ee;
            font-size: 2.5rem;
            font-weight: bold;
            position: relative;
        }

        .caixinha-card-text {
            position: absolute;
            bottom: 10px;
            font-size: 0.9rem;
            color: #1065ee;
        }
    </style>
</head>
<body>
    <div class="top-bar">
        <div class="top-bar-content">
            <a asp-page="/Home">
                <img src="~/img/logoBKS.png" alt="BankSim Logo" class="logo-img" />
            </a>
        </div>
    </div>

    <!-- Total em investimentos -->
    <div class="investimento-total">
        Total em investimentos: R$ @Model.TotalRendido.ToString("N2")
    </div>

    <div class="container">
        <!-- Botão de criar nova caixinha -->
        <div class="caixinha-card" onclick="window.location.href='CriarCaixinha'">
            +
            <div class="caixinha-card-text">Criar nova</div>
        </div>

        <!-- Lista de caixinhas -->
        @foreach (var c in Model.ListaCaixinha)
        {
            <div class="caixinha" onclick="window.location.href='DetalheCaixinha/@c.ID'">
                @if (!string.IsNullOrEmpty(c.FotoCaixinha))
                {
                    <img src="~/img/caixinhas/@c.FotoCaixinha" alt="@c.NomeCaixinha" />
                }
                <div class="caixinha-info">
                    <h4>@c.NomeCaixinha</h4>
                    <div class="valor">R$ @c.ValorCaixinhaAtual.ToString("N2")</div>
                    <div class="rend">
                        <span class="porcentagem">@c.PorcentagemRendimento.ToString("N2")%</span> ao ano
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>