@page
@model Banksim_Web.Pages.Emprestimo.StatusEmprestimoModel
@{
    ViewData["Title"] = "Acompanhamento de Empréstimo";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Acompanhamento de Empréstimo - BankSim</title>
    <style>
        body {
            margin: 0;
            padding-top: 60px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f6fa;
        }

        .top-bar {
            width: 100%;
            height: 60px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .top-bar-content {
            width: 100%;
            max-width: 1200px;
            padding: 0 40px;
            display: flex;
            align-items: center;
        }

        .logo-img {
            height: 2rem;
        }

        .info-box {
            padding: 40px;
            margin-top: 80px;
            margin-left: 40px;
        }

        .btn-ir-pagamento {
            margin-top: 30px;
            background-color: #1065ee;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-ir-pagamento:hover {
                background-color: #005ae0;
            }

        .info-label {
            font-weight: bold;
            margin-top: 10px;
        }

        .info-value {
            color: #1065ee;
            font-size: 1.2rem;
            margin-bottom: 15px;
        }

        h2 {
            margin-bottom: 20px;
        }

    </style>
</head>
<body>
    <div class="top-bar">
        <div class="top-bar-content">
            <a asp-page="/Home">
                <img src="~/img/logoBKS.png" alt="BankSim Logo" class="logo-img" />
            </a>
        </div>
    </div>

    <div class="info-box">
        <h2>Seu Empréstimo Ativo</h2>

        <div class="info-label">Nome do Empréstimo:</div>
        <div class="info-value">@Model.Emprestimo?.NomeEmprestimo</div>

        <div class="info-label">Valor Total:</div>
        <div class="info-value">R$ @Model.Emprestimo?.ValorEmprestimo.ToString("F2")</div>

        <div class="info-label">Valor Pago:</div>
        <div class="info-value">R$ @Model.ValorPago.ToString("F2")</div>

        <div class="info-label">Valor Restante:</div>
        <div class="info-value">R$ @Model.ValorRestante.ToString("F2")</div>

        <div class="info-label">Próxima Parcela:</div>
        <div class="info-value">@Model.ProximaParcela</div>

        <form method="get" asp-page="/Emprestimo/PagamentoEmprestimo">
            <button type="submit" class="btn-ir-pagamento">Ir para Pagamento</button>
        </form>
    </div>
</body>
</html>