@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    ViewData["ExibirCalculadora"] = false;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap" rel="stylesheet">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Banksim</title>
    <style>
        .top-bar {
            width: 100%;
            height: 60px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .top-bar-content {
            width: 100%;
            max-width: 1200px;
            padding: 0 40px;
            display: flex;
            align-items: center;
        }

        .top-logo {
            font-size: 1.8rem;
            font-weight: bold;
            color: #2198F4;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-decoration: none; /* <-- Adicione esta linha */
        }

            .top-logo:hover {
                cursor: pointer;
            }

        .logo-img {
            height: 2rem; /* Igual ao font-size anterior */
            display: inline-block;
            vertical-align: middle;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            margin: 0;
            height: calc(100vh - 60px); /* ajuste para compensar a barra fixa */
            display: flex;
            align-items: center;
            justify-content: center;
            padding-top: 60px;
            overflow: hidden; /* opcional, para garantir que nada vaze da viewport */
        }

        .main-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            max-width: 1600px;
            width: 100%;
            padding: 40px;
            gap: 40px;
        }

        .image-side {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .image-side img {
                width: 100%;
                max-width: 800px; /* maior limite */
                min-width: 400px;
                height: auto;
                border-radius: 12px;
            }

        .login-container {
            background-color: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
            width: 380px;
        }

            .login-container h2 {
                text-align: center;
                color: #2198F4;
                margin-bottom: 24px;
                font-weight: bold;
            }

            .login-container input[type="text"],
            .login-container input[type="password"],
            .login-container button {
                width: 100%;
                padding: 12px;
                font-size: 16px;
                border-radius: 6px;
                box-sizing: border-box;
            }

            .login-container input[type="text"],
            .login-container input[type="password"] {
                width: 100%;
                padding: 12px;
                margin-bottom: 12px;
                border: 1px solid #ddd;
                border-radius: 6px;
                font-size: 16px;
            }

            .login-container button {
                background-color: #2198F4;
                border: none;
                color: white;
                font-size: 16px;
                border-radius: 6px;
                cursor: pointer;
            }

            .login-container .error {
                color: red;
                margin-bottom: 12px;
                text-align: center;
            }

            .login-container a {
                font-size: 14px;
                color: #2198F4;
                text-decoration: none;
            }

            .login-container .logo-img {
                display: block;
                margin: 0 auto 24px auto; /* centraliza e adiciona espaçamento abaixo */
                height: 60px; /* ajuste de tamanho opcional */
            }

            .logo-img {
                height: 2.2rem;
                vertical-align: middle;
                margin-left: 8px;
            }

        @@media (max-width: 900px) {
            .main-wrapper

        {
            flex-direction: column;
            gap: 20px;
            padding: 20px;
        }

        .image-side img {
            max-width: 100vw;
            min-width: unset;
        }
        }
    </style>
</head>
<body>
    <div class="top-bar">
        <div class="top-bar-content">
            <a asp-page="/Index" class="top-logo">
                <img src="~/img/logoBKS.png" alt="BankSim Logo" class="logo-img" />
            </a>
        </div>
    </div>
    <div class="main-wrapper">
        <div class="image-side">
            <img src="~/img/login-image.png" alt="Login Illustration">
        </div>
    <div class="login-container">
            <img src="~/img/minilogoBKS.png" alt="BankSim Logo" class="logo-img" />
        <form method="post">
            @if (!string.IsNullOrEmpty(Model.MensagemErro))
            {
                <div class="error">@Model.MensagemErro</div>
            }

            <input asp-for="Login" placeholder="Login" />
            <input asp-for="Senha" type="password" placeholder="Senha" />
            <button type="submit">Entrar</button>
            <div style="text-align: center; margin-top: 12px;">
                <a asp-page="/Acessos/Registro" style="font-size: 14px; color: #1877f2; text-decoration: none;">
                    Não tem uma conta? Cadastre-se
                </a>
            </div>
                <div style="text-align: center; font-size: 12px; color: #555; margin-top: 16px;">
                    Ao entrar, você concorda com nossos
                    <a href="#" style="color: #2198F4; text-decoration: none;">Termos</a> e
                    <a asp-page="/Privacy" style="color: #2198F4; text-decoration: none;">Política de Privacidade</a>.
                </div>
        </form>
        </div>
    </div>
</body>
</html>