@page
@model RegistroModel
@{
    ViewData["Title"] = "Cadastro de Usuário";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankSim</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        .top-bar {
            width: 100%;
            height: 60px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .top-bar-content {
            width: 100%;
            max-width: 1200px;
            padding: 0 40px;
            display: flex;
            align-items: center;
        }

        .top-logo {
            font-size: 1.8rem;
            font-weight: bold;
            color: #2198F4;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-decoration: none; /* <-- Adicione esta linha */
        }

            .top-logo:hover {
                cursor: pointer;
            }

        .logo-img {
            height: 2rem; /* Igual ao font-size anterior */
            display: inline-block;
            vertical-align: middle;
        }

        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            height: 100vh;
            padding-top: 60px; /* altura da top-bar */
        }

        .left-side {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background: transparent;
            padding: 2rem;
        }

        .right-side {
            flex: 1;
            background-color: #2563eb;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 2rem;
            flex-direction: column;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.8); /* fundo translúcido */
            backdrop-filter: blur(10px); /* desfoque atrás */
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="top-bar-content">
            <a asp-page="/Index" class="top-logo">
                <img src="~/img/logoBKS.png" alt="BankSim Logo" class="logo-img" />
            </a>
        </div>
    </div>

    <!-- Tela dividida -->
    <div class="split-screen">
        <!-- Lado esquerdo -->
        <div class="left-side">
            <div class="form-container">
                <h3 class="mb-4 text-center">Crie sua conta</h3>
                <form method="post">
                    <div class="mb-3">
                        <input asp-for="Nome" class="form-control" placeholder="Nome completo" />
                    </div>
                    <div class="mb-3">
                        <input asp-for="Login" class="form-control" placeholder="Nome de usuário" />
                    </div>
                    <div class="mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email (opcional)" />
                    </div>
                    <div class="mb-3">
                        <input asp-for="Senha" class="form-control" type="password" placeholder="Senha" />
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="terms" required />
                        <label class="form-check-label" for="terms">
                            Aceito os <a href="#">Termos de Uso</a> e a <a href="#">Política de Privacidade</a>.
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Registrar</button>
                    <p class="text-danger mt-2">@Model.Mensagem</p>
                    <p class="mt-3 text-center">
                        Já tem uma conta? <a href="/Acessos/Login">Fazer login</a>
                    </p>
                </form>
            </div>
        </div>

        <!-- Lado direito -->
        <div class="right-side">
            <h1><strong>Explore o melhor da simulação bancária</strong></h1>
            <p class="mt-3">
                Aprenda, treine e evolua com o BankSim — a plataforma de simulação bancária para iniciantes e profissionais.
            </p>
        </div>
    </div>
</body>
</html>