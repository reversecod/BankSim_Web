@page
@model CriarCaixinhaModel
@{
    ViewData["Title"] = "Criar Caixinha";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Criar Caixinha - BankSim</title>
    <style>
        body {
            margin: 0;
            padding-top: 60px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f6fa;
        }

        .top-bar {
            width: 100%;
            height: 60px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .top-bar-content {
            width: 100%;
            max-width: 1200px;
            padding: 0 40px;
            display: flex;
            align-items: center;
        }

        .logo-img {
            height: 2rem;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto;
            margin-top: 40px;
            background-color: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        label {
            display: block;
            margin-top: 20px;
            font-weight: 500;
        }

        input, select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        .btn-submit {
            margin-top: 30px;
            width: 100%;
            background-color: #1065ee;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
        }

            .btn-submit:hover {
                background-color: #005ae0;
            }

        .text-danger {
            color: red;
            font-size: 0.9rem;
            margin-top: 10px;
        }

    </style>
</head>
<body>
    <div class="top-bar">
        <div class="top-bar-content">
            <a asp-page="/Home">
                <img src="~/img/logoBKS.png" alt="BankSim Logo" class="logo-img" />
            </a>
        </div>
    </div>

    <div class="form-container">
        <h2>Criar Nova Caixinha</h2>
        <form method="post" enctype="multipart/form-data">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <label asp-for="Caixinha.NomeCaixinha">Nome da Caixinha:</label>
            <input asp-for="Caixinha.NomeCaixinha" />
            <span asp-validation-for="Caixinha.NomeCaixinha" class="text-danger"></span>

            <label asp-for="Caixinha.ValorCaixinhaAtual">Valor Inicial (R$):</label>
            <input asp-for="Caixinha.ValorCaixinhaAtual" type="number" step="0.01" />
            <span asp-validation-for="Caixinha.ValorCaixinhaAtual" class="text-danger"></span>

            <label asp-for="Caixinha.PorcentagemRendimento">Rendimento Mensal (%):</label>
            <input asp-for="Caixinha.PorcentagemRendimento" type="number" step="0.01" />
            <span asp-validation-for="Caixinha.PorcentagemRendimento" class="text-danger"></span>

            <label asp-for="ArquivoImagem">Imagem da Caixinha (opcional):</label>
            <input asp-for="ArquivoImagem" type="file" />

            <button type="submit" class="btn-submit">Criar Caixinha</button>
        </form>
    </div>
</body>
</html>